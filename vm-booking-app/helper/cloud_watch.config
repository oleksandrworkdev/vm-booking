cat << EOF | sudo tee /opt/aws/amazon-cloudwatch-agent/bin/config.json
{
   "agent":{
      "run_as_user":"root"
   },
   "logs":{
      "logs_collected":{
         "files":{
            "collect_list":[
               {
                  "file_path":"/opt/app.log",
                  "log_group_name":"vm-booking-app-log",
                  "log_stream_name":"{instance_id}"
               }
            ]
         }
      }
   }
}
EOF